<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
  <data-sources />
  <form-beans >
  	
 	<form-bean name="loginForm" type="org.apache.struts.action.DynaActionForm">
 	
 		<!-- 用户登陆Bean -->
 		<form-property name="username" type="java.lang.String"></form-property>
 		<form-property name="password" type="java.lang.String"></form-property>
 		
 		<!-- 邮件发送Bean -->
 		<form-property name="fajianren" type="java.lang.String"></form-property>
 		<form-property name="shoujianren" type="java.lang.String"></form-property>
 		<form-property name="title" type="java.lang.String"></form-property>
 		<form-property name="content" type="java.lang.String"></form-property>
 		
 	</form-bean>

  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
  
    
    <action
      parameter="method"
      path="/infoAction"
      name="loginForm"
      scope="request"
      type="com.hygj.action.InfoAction" >
      <forward name="main" path="/main.html"></forward>
      <forward name="yijie" path="/tab/yijie.jsp"></forward>
      <forward name="yijiecount" path="/shoujian.jsp"></forward>
      <forward name="yifa" path="/tab/yifa.jsp"></forward>
      <forward name="yishan" path="/tab/yishanchu.jsp"></forward>
      <forward name="emaillist" path="/tab/emaillist.jsp"></forward>
      <forward name="yifacout" path="/fajian.jsp"></forward>
      <forward name="yishancout" path="/shanchu.jsp"></forward>
      <forward name="caogao" path="/tab/caogao.jsp"></forward>
      <forward name="caogaocount" path="/caogao.jsp"></forward>
      <forward name="left" path="/left.jsp"></forward>
      <forward name="welcome" path="/welcome.jsp"></forward>
      <forward name="ok" path="/ok.jsp"></forward>
      <forward name="oks" path="/oks.jsp"></forward>
      <forward name="oki" path="/oki.jsp"></forward>
      </action>
    <action
      parameter="method"
      path="/selectAction"
      scope="request"
      type="com.hygj.action.SelectAction" >
      </action>

  </action-mappings>

  <message-resources parameter="com.yourcompany.struts.ApplicationResources" />
</struts-config>

