<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
    monitoring="autodetect" dynamicConfig="true">
	<!--系统临时文件目录 -->
    <diskStore path="java.io.tmpdir" /> 
  <!-- 24小时存活  86400 = 60*60*24  -->
  
  <!--指定缓存文件目录-->
   <!--  <diskStore path="E:/cachetmpdir" /> -->
    <defaultCache maxElementsInMemory="1000" eternal="false" overflowToDisk="true"
        maxElementsOnDisk="1000" diskPersistent="false" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
         diskExpiryThreadIntervalSeconds="120" memoryStoreEvictionPolicy="LRU" />
   
    <!-- 用户缓存器  -->
    <cache name="userCache" maxElementsInMemory="1000"
        maxElementsOnDisk="1000" eternal="true" overflowToDisk="true" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        diskSpoolBufferSizeMB="30" />
        
     <!-- 角色缓存器  -->
     <cache name="roleCache" maxElementsInMemory="100"
        maxElementsOnDisk="100" eternal="true" overflowToDisk="true" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        diskSpoolBufferSizeMB="5" />
        
     <!-- 业务品种缓存器  -->
     <cache name="varietyCache" maxElementsInMemory="20"
        maxElementsOnDisk="50" eternal="true" overflowToDisk="true" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        diskSpoolBufferSizeMB="2" />
     
      <!-- 子业务流程缓存器  -->
     <cache name="bussProccCache" maxElementsInMemory="20"
        maxElementsOnDisk="50" eternal="true" overflowToDisk="true" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        diskSpoolBufferSizeMB="2" />
        
     
     <!-- 业务流程节点缓存器   -->  
     <cache name="bussNodeCache" maxElementsInMemory="500"
        maxElementsOnDisk="500" eternal="false" overflowToDisk="true"
        diskSpoolBufferSizeMB="20" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        memoryStoreEvictionPolicy="LFU" />
      
     <!-- 流转路径缓存器  -->  
     <cache name="bussTransCache" maxElementsInMemory="800"
        maxElementsOnDisk="800" eternal="false" overflowToDisk="true"
        diskSpoolBufferSizeMB="20" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        memoryStoreEvictionPolicy="LFU" />
          
     <!-- 流程节点配置缓存器  -->  
     <cache name="nodeCfgCache" maxElementsInMemory="1000"
        maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
        diskSpoolBufferSizeMB="20" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        memoryStoreEvictionPolicy="LFU" />
        
       <!--会签配置缓存器  -->  
     <cache name="countersignCfgCache" maxElementsInMemory="500"
        maxElementsOnDisk="500" eternal="false" overflowToDisk="true"
        diskSpoolBufferSizeMB="10" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        memoryStoreEvictionPolicy="LFU" />    
        
     <!--流转路径配置 配置缓存器  -->  
     <cache name="transCfgCache" maxElementsInMemory="1000"
        maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
        diskSpoolBufferSizeMB="20" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        memoryStoreEvictionPolicy="LFU" />
        
       <!--节点表单配置  配置缓存器  -->  
     <cache name="formCfgCache" maxElementsInMemory="1000"
        maxElementsOnDisk="1000" eternal="false" overflowToDisk="true"
        diskSpoolBufferSizeMB="20" timeToIdleSeconds="86400" timeToLiveSeconds="86400"
        memoryStoreEvictionPolicy="LFU" />
</ehcache>