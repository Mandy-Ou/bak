<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC  
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"  
	"http://struts.apache.org/dtds/struts-2.3.dtd">  
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<!-- 国际化支持 -->
	<constant name="struts.custom.i18n.resources" value="message"/>
	<!-- 系统共用配置放置到此文件中配置，例如：登录和上传及工作流相关配置 -->
	<!-- <include file="cmw_sys.xml" /> -->
	<!-- Add packages here -->
	<package name="common" extends="struts-default">
		<action name="gotoLogin" class="com.cmw.action.sys.UserAction" method="gotoLogin">
			<result name="success">/pages/login/login.jsp</result>
		</action>
		<!-- 登录 -->
		<action name="login" class="com.cmw.action.sys.UserAction" method="login">
			<result name="success">/pages/index.jsp</result>
			<result name="error">/pages/login/login.jsp</result>
			<result name="input">/pages/login/login.jsp</result>
		</action>
		<!-- 登出 -->
		<action name="logout" class="com.cmw.action.sys.UserAction" method="logout">
			<result name="success">/pages/login/login.jsp</result>
			<result name="error">/pages/login/login.jsp</result>
			<result name="input">/pages/login/login.jsp</result>
		</action>
	</package>
	
	<!-- 系统 功能模块 -->
	<package name="sys" extends="struts-default">
		<action name="sys*_*" class="com.cmw.action.sys.{1}Action" method="{2}">
		</action>
	</package>
	<!-- 委托客户功能模块 -->
	<package name="fu" extends="struts-default">
		<action name="fu*_*" class="com.cmw.action.funds.{1}Action" method="{2}">
		</action>
	</package>
	<!-- 财务接口 功能模块 -->
	<package name="fs" extends="struts-default">
		<action name="fs*_*" class="com.cmw.action.fininter.{1}Action" method="{2}">
		</action>
	</package>
	
	<!-- 小额贷款 功能模块 -->
	<package name="fc" extends="struts-default">
		<action name="fc*_*" class="com.cmw.action.finance.{1}Action" method="{2}">
		</action>
	</package>
	
	<!-- CRM功能模块 -->
	<package name="crm" extends="struts-default">
		<action name="crm*_*" class="com.cmw.action.crm.{1}Action" method="{2}">
		</action>
	</package>
	
	<!-- 弹出框 功能模块 -->
	<package name="dialog" extends="struts-default">
		<action name="dg*_*" class="com.cmw.action.dialog.{1}Action" method="{2}">
		</action>
	</package>
	
</struts>
